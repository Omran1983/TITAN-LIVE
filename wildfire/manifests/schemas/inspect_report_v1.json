{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "inspect_report_v1",
    "type": "object",
    "required": [
        "report_id",
        "request_id",
        "summary",
        "findings",
        "signed"
    ],
    "properties": {
        "report_id": {
            "type": "string"
        },
        "request_id": {
            "type": "string"
        },
        "summary": {
            "type": "string"
        },
        "findings": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "type",
                    "severity",
                    "evidence"
                ],
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "severity": {
                        "type": "string",
                        "enum": [
                            "low",
                            "med",
                            "high",
                            "critical"
                        ]
                    },
                    "evidence": {
                        "type": "object"
                    }
                }
            }
        },
        "signed": {
            "type": "boolean"
        },
        "signature": {
            "type": "object"
        }
    }
}