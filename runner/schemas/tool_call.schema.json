{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "TitanToolCall",
    "type": "object",
    "required": [
        "tool",
        "args",
        "call_id"
    ],
    "properties": {
        "call_id": {
            "type": "string"
        },
        "tool": {
            "type": "string",
            "enum": [
                "file.read",
                "file.write",
                "file.list",
                "shell.exec",
                "python.run",
                "http.get",
                "zip.pack"
            ]
        },
        "args": {
            "type": "object",
            "additionalProperties": true
        },
        "reason": {
            "type": "string"
        }
    },
    "additionalProperties": false
}