OPENAI_API_KEY=your_key_here

# Lane-1 model (stable)
TITAN_IMAGE_MODEL=gpt-image-1.5

# Output/log locations
TITAN_SOCIAL_OUT_DIR=F:\AION-ZERO\outputs\titan-social
TITAN_SOCIAL_LOG_DIR=F:\AION-ZERO\logs\titan-social

# Kill-switch thresholds
TITAN_FAIL_RATE_WINDOW=20
TITAN_FAIL_RATE_THRESHOLD=0.30

# --- Validators ---
# Safe-zone margin as a fraction of image size (0.08 = 8% margin)
TITAN_SAFEZONE_MARGIN=0.08

# Margin busyness threshold (lower = stricter). Tune after 20 samples.
TITAN_SAFEZONE_BUSINESS_THRESHOLD=0.20

# OCR readability (optional)
TITAN_ENABLE_OCR=1

# OCR confidence threshold (0-100). Stricter = fewer false PASS.
TITAN_OCR_CONFIDENCE=55

# OCR: reject if no text detected at all (1=yes, 0=no)
TITAN_OCR_REQUIRE_TEXT=1

# OCR: safe-zone enforcement using OCR boxes (1=yes, 0=no)
TITAN_OCR_ENFORCE_SAFEZONE=1
