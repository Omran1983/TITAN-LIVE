{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "DoctorFixIntent",
    "type": "object",
    "required": [
        "signal_id",
        "selected_action",
        "justification",
        "dry_run",
        "attempt"
    ],
    "properties": {
        "signal_id": {
            "type": "string"
        },
        "selected_action": {
            "enum": [
                "restart",
                "rollback",
                "redeploy",
                "config_refresh",
                "cache_clear",
                "noop"
            ]
        },
        "justification": {
            "type": "string"
        },
        "dry_run": {
            "type": "boolean"
        },
        "attempt": {
            "type": "integer",
            "minimum": 1
        }
    }
}