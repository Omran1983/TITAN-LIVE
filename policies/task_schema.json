{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "TitanTaskV2",
    "type": "object",
    "required": [
        "version",
        "task_id",
        "request",
        "limits",
        "output"
    ],
    "properties": {
        "version": {
            "type": "string",
            "enum": [
                "1.0"
            ]
        },
        "task_id": {
            "type": "string",
            "minLength": 5
        },
        "request": {
            "type": "object",
            "required": [
                "type",
                "target"
            ],
            "properties": {
                "type": {
                    "type": "string"
                },
                "target": {
                    "type": "object"
                },
                "checks": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "notes": {
                    "type": "string"
                }
            }
        },
        "limits": {
            "type": "object",
            "properties": {
                "max_runtime_seconds": {
                    "type": "integer"
                },
                "max_pages": {
                    "type": "integer"
                },
                "max_bytes_per_page": {
                    "type": "integer"
                },
                "max_total_bytes": {
                    "type": "integer"
                },
                "respect_robots_txt": {
                    "type": "boolean"
                },
                "rate_limit_ms": {
                    "type": "integer"
                }
            }
        },
        "output": {
            "type": "object",
            "properties": {
                "format": {
                    "type": "string"
                },
                "save_artifacts": {
                    "type": "boolean"
                }
            }
        }
    },
    "additionalProperties": true
}