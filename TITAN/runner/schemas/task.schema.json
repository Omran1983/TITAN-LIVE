{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "TitanTask",
    "type": "object",
    "required": [
        "version",
        "task_id",
        "created_at",
        "tenant",
        "request",
        "limits",
        "policy"
    ],
    "properties": {
        "version": {
            "type": "string",
            "enum": [
                "1.0"
            ]
        },
        "task_id": {
            "type": "string",
            "minLength": 8
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "tenant": {
            "type": "object",
            "required": [
                "org",
                "project",
                "env"
            ],
            "properties": {
                "org": {
                    "type": "string"
                },
                "project": {
                    "type": "string"
                },
                "env": {
                    "type": "string",
                    "enum": [
                        "local",
                        "staging",
                        "prod"
                    ]
                }
            }
        },
        "request": {
            "type": "object",
            "required": [
                "goal",
                "inputs"
            ],
            "properties": {
                "goal": {
                    "type": "string",
                    "minLength": 5
                },
                "inputs": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "kind",
                            "ref"
                        ],
                        "properties": {
                            "kind": {
                                "type": "string",
                                "enum": [
                                    "text",
                                    "file",
                                    "url"
                                ]
                            },
                            "ref": {
                                "type": "string"
                            },
                            "label": {
                                "type": "string"
                            }
                        }
                    }
                },
                "deliverables": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "context": {
                    "type": "object",
                    "additionalProperties": true
                }
            }
        },
        "limits": {
            "type": "object",
            "required": [
                "max_seconds",
                "max_tool_calls",
                "max_output_mb"
            ],
            "properties": {
                "max_seconds": {
                    "type": "integer",
                    "minimum": 10,
                    "maximum": 3600
                },
                "max_tool_calls": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 200
                },
                "max_output_mb": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 500
                }
            }
        },
        "policy": {
            "type": "object",
            "required": [
                "allowlist_version",
                "approval_mode"
            ],
            "properties": {
                "allowlist_version": {
                    "type": "string"
                },
                "approval_mode": {
                    "type": "string",
                    "enum": [
                        "auto",
                        "step",
                        "none"
                    ]
                },
                "data_handling": {
                    "type": "string",
                    "enum": [
                        "local_only",
                        "allow_net"
                    ]
                }
            }
        },
        "callbacks": {
            "type": "object",
            "properties": {
                "mode": {
                    "type": "string",
                    "enum": [
                        "file",
                        "http"
                    ]
                },
                "http": {
                    "type": "object",
                    "properties": {
                        "post_url": {
                            "type": "string"
                        },
                        "auth_bearer_env": {
                            "type": "string"
                        }
                    }
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}