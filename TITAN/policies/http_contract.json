{
    "tool": "http.get",
    "input": {
        "url": "string (https://...)",
        "headers": "object (optional)",
        "timeout_seconds": "int (optional)",
        "max_bytes": "int (optional)",
        "allow_redirects": "bool (optional, default true)",
        "user_agent": "string (optional)"
    },
    "output": {
        "ok": "bool",
        "status_code": "int",
        "final_url": "string",
        "content_type": "string",
        "bytes": "int",
        "text": "string (utf-8 if textual, else empty)",
        "sha256": "string",
        "error": "string (optional)"
    },
    "security": [
        "deny_private_ips=true required",
        "block file://, ftp://, gopher://",
        "max_bytes enforced",
        "timeout enforced"
    ]
}