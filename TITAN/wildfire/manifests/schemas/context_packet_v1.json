{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "context_packet_v1",
    "type": "object",
    "required": [
        "packet_id",
        "command_id",
        "tiers",
        "token_budget",
        "assembled_at"
    ],
    "properties": {
        "packet_id": {
            "type": "string"
        },
        "command_id": {
            "type": "string"
        },
        "assembled_at": {
            "type": "string",
            "format": "date-time"
        },
        "token_budget": {
            "type": "integer",
            "minimum": 256
        },
        "tiers": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "tier",
                    "sources",
                    "tokens_used"
                ],
                "properties": {
                    "tier": {
                        "type": "string",
                        "enum": [
                            "L0",
                            "L1",
                            "L2",
                            "L3"
                        ]
                    },
                    "sources": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "tokens_used": {
                        "type": "integer",
                        "minimum": 0
                    }
                }
            }
        },
        "redactions_applied": {
            "type": "boolean"
        }
    }
}