{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "InspectorSignal",
    "type": "object",
    "required": [
        "signal_id",
        "signal_type",
        "severity",
        "confidence",
        "scope",
        "evidence",
        "allowed_actions",
        "timestamp"
    ],
    "properties": {
        "signal_id": {
            "type": "string"
        },
        "signal_type": {
            "type": "string"
        },
        "severity": {
            "enum": [
                "LOW",
                "MEDIUM",
                "HIGH",
                "CRITICAL"
            ]
        },
        "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
        },
        "scope": {
            "type": "string"
        },
        "evidence": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "allowed_actions": {
            "type": "array",
            "items": {
                "enum": [
                    "restart",
                    "rollback",
                    "redeploy",
                    "config_refresh",
                    "cache_clear",
                    "noop"
                ]
            }
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        }
    }
}