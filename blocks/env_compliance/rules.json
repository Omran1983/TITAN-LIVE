{
    "version": "1.0.0",
    "effective_date": "2026-01-01",
    "jurisdiction": "MU",
    "source": "EPA 2025/2026",
    "rules": [
        {
            "id": "ENV26-PLASTICS-001",
            "name": "Single-Use Plastic Reduction",
            "description": "Ensure single-use plastic consumption stays below the monthly allowance of 50kg.",
            "type": "consumption_limit",
            "value": 50,
            "parameters": {
                "unit": "kg",
                "period": "monthly",
                "category": "plastics_single_use"
            }
        },
        {
            "id": "ENV26-PERMIT-001",
            "name": "Valid Environmental Impact License",
            "description": "Business must hold a valid, unexpired EIA/PER license.",
            "type": "permit_check",
            "parameters": {
                "required_status": "active",
                "evidence_required": true,
                "max_age_days": 365
            }
        },
        {
            "id": "ENV26-WASTE-001",
            "name": "Hazardous Waste Disposal Log",
            "description": "Hazardous waste must be disposed of via certified carriers with manifest evidence.",
            "type": "obligation",
            "parameters": {
                "evidence_required": true,
                "accepted_evidence": [
                    "disposal_manifest",
                    "carrier_receipt"
                ]
            }
        }
    ]
}