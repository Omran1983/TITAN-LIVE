{
    "version": "1.0.0",
    "effective_date": "2026-01-01",
    "jurisdiction": "MU",
    "source": "PRB 2026",
    "rules": [
        {
            "id": "PRB26-SAL-001",
            "name": "Minimum wage baseline floor",
            "description": "Ensure no employee base remuneration falls below Rs 16,500 (baseline).",
            "type": "salary_floor",
            "value": 16500,
            "parameters": {
                "currency": "MUR",
                "applies_to": "all_employees",
                "basis": "base_or_baseline",
                "notes": "Interpretation depends on employer policy for components; keep audit notes in evidence vault."
            }
        },
        {
            "id": "PRB26-PMS-001",
            "name": "Performance-linked increment gate",
            "description": "Annual increments should be granted only if performance status is satisfactory (pass).",
            "type": "increment_policy",
            "parameters": {
                "required_status": [
                    "pass",
                    "satisfactory"
                ],
                "blocked_status": [
                    "hold",
                    "unsatisfactory",
                    "pending"
                ],
                "evidence_required": true
            }
        },
        {
            "id": "PRB26-OBL-001",
            "name": "Training and capacity building obligation",
            "description": "Employer must maintain training/capacity building records and demonstrate competency development for staff.",
            "type": "obligation",
            "parameters": {
                "evidence_required": true,
                "min_records_per_employee_per_year": 1,
                "accepted_evidence": [
                    "certificate",
                    "attendance",
                    "internal_training_log"
                ]
            }
        },
        {
            "id": "PRB26-OBL-002",
            "name": "Wellbeing support policy evidence",
            "description": "Employer should maintain evidence of wellbeing/mental health support mechanisms and actions.",
            "type": "obligation",
            "parameters": {
                "evidence_required": true,
                "accepted_evidence": [
                    "policy_document",
                    "awareness_session",
                    "support_provider_contract",
                    "internal_program_log"
                ]
            }
        },
        {
            "id": "PRB26-DIG-001",
            "name": "Digitalisation and AI readiness action log",
            "description": "Employer should track digitalisation/AI-readiness initiatives and keep a simple action log.",
            "type": "obligation",
            "parameters": {
                "evidence_required": true,
                "accepted_evidence": [
                    "it_action_log",
                    "tool_adoption_record",
                    "training_log",
                    "process_digitisation_record"
                ]
            }
        }
    ]
}